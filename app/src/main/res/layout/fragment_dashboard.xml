<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DashboardFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarillo_claro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="88dp">

            <!-- Encabezado -->
            <TextView
                android:id="@+id/mfDashTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="18dp"
                android:text="@string/dash_title"
                android:textColor="@color/negro"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/mfDashSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"
                android:text="@string/dash_subtitle"
                android:textColor="@color/texto1"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/mfDashTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Card superior con dona -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mfCardDona"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/mf_bg_card"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/mfDashSubtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <lecho.lib.hellocharts.view.PieChartView
                    android:id="@+id/dona1"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/TxtGastoTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="62dp"
                    android:gravity="center"
                    android:maxWidth="180dp"
                    android:text="@string/ceros"
                    style="@style/TxtGrisGrande"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeMaxTextSize="64sp"
                    app:autoSizeStepGranularity="2sp"
                    app:layout_constraintTop_toTopOf="@id/dona1"
                    app:layout_constraintStart_toStartOf="@id/dona1"
                    app:layout_constraintEnd_toEndOf="@id/dona1"/>

                <TextView
                    android:id="@+id/TxtGastados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="142dp"
                    android:text="@string/gastados"
                    style="@style/TxtVerdePequenoItalic"
                    app:layout_constraintTop_toTopOf="@id/dona1"
                    app:layout_constraintStart_toStartOf="@id/dona1"
                    app:layout_constraintEnd_toEndOf="@id/dona1"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Card: Disponible -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mfCardDisponible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/mf_bg_card"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/mfCardDona"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/txtDisponible"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/disponible"
                    style="@style/TxtNegroPequenoItalic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cantidadDisponible"/>

                <TextView
                    android:id="@+id/cantidadDisponible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ceros"
                    style="@style/TxtNegroPequenoItalic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Track (100%) -->
                <View
                    android:id="@+id/barraGrisDisponible"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_progress_track"
                    app:layout_constraintTop_toBottomOf="@id/txtDisponible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Fill (calculado por código) -->
                <View
                    android:id="@+id/barraDisponible"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bg_progress_fill"
                    android:visibility="invisible"
                    app:layout_constraintTop_toTopOf="@id/barraGrisDisponible"
                    app:layout_constraintBottom_toBottomOf="@id/barraGrisDisponible"
                    app:layout_constraintStart_toStartOf="@id/barraGrisDisponible"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ===== Cards por categoría ===== -->

            <!-- Otros (Gastos Varios) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bloqueGastosVarios"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/mf_bg_card"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/mfCardDisponible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/mfTitleGv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/gastos_varios"
                    style="@style/TxtNegroPequenoItalic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cantidadGastosVarios"/>

                <TextView
                    android:id="@+id/cantidadGastosVarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ceros"
                    style="@style/TxtNegroPequenoItalic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/barraGastosVarios"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_progress_fill"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/mfTitleGv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewGastosVarios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/barraGastosVarios"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Comida (Alimentos) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bloqueAlimentos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/mf_bg_card"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/bloqueGastosVarios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/mfTitleAli"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/alimentos"
                    style="@style/TxtNegroPequenoItalic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cantidadAlimentos"/>

                <TextView
                    android:id="@+id/cantidadAlimentos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ceros"
                    style="@style/TxtNegroPequenoItalic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/barraAlimentos"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_progress_fill"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/mfTitleAli"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewAlimentos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/barraAlimentos"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Movilidad (Transporte) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bloqueTransporte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/mf_bg_card"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/bloqueAlimentos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/mfTitleTra"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/transporte"
                    style="@style/TxtNegroPequenoItalic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cantidadTransporte"/>

                <TextView
                    android:id="@+id/cantidadTransporte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ceros"
                    style="@style/TxtNegroPequenoItalic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/barraTransporte"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_progress_fill"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/mfTitleTra"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTransporte"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/barraTransporte"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Servicios -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bloqueServicios"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/mf_bg_card"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/bloqueTransporte"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/mfTitleSer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/servicios"
                    style="@style/TxtNegroPequenoItalic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cantidadServicios"/>

                <TextView
                    android:id="@+id/cantidadServicios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ceros"
                    style="@style/TxtNegroPequenoItalic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/barraServicios"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_progress_fill"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/mfTitleSer"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewServicios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/barraServicios"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Super (Mercado) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bloqueMercado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/mf_bg_card"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/bloqueServicios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/mfTitleMer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mercado"
                    style="@style/TxtNegroPequenoItalic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cantidadMercado"/>

                <TextView
                    android:id="@+id/cantidadMercado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ceros"
                    style="@style/TxtNegroPequenoItalic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/barraMercado"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_progress_fill"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/mfTitleMer"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewMercado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/barraMercado"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/mas"
        android:backgroundTint="@color/verde_claro"
        app:maxImageSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/desc_mas" />

</androidx.constraintlayout.widget.ConstraintLayout>